<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:c="sap.ui.commons"
	xmlns:table="sap.ui.table">
<!-- <ScrollContainer> -->
	<Table id="tblErr"  inset="false" class="tableclass table_ticket_admin"	 
		items="{path: '/'}" growing="true" growingThreshold="100" fixedLayout="true">
		
		<columns>
			<Column width="20%">
				<Label text="Travel Req" />
			</Column>
			<Column width="20%">
				<Label text="Employee No" />
			</Column>
			<Column width="20%">
				<Label text="Description"/>
			</Column>
			
		</columns>
		<items>
			<ColumnListItem  height="10px" >
				<cells>
					<Text text="{TravelPlan}" />
					<Text text="{EmpNo}" />
					<Text text="{Remarks}" wrapping="false" tooltip="{Remarks}"/>				
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
<!-- 	</ScrollContainer> -->
</core:FragmentDefinition>