<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:commons="sap.ui.commons" xmlns:u="sap.ui.unified">
	<Toolbar>
		<Label text="Show" />
		<Select change="onEntriesDisplay">
			<items>
				<core:Item key="10" text="10" />
				<core:Item key="25" text="25" />
				<core:Item key="50" text="50" />
				<core:Item key="100" text="100" />
			</items>
		</Select>
		<Label text="Entries" />
		<ToolbarSpacer />
		<SearchField width="200px" liveChange="onLiveSearch"
			selectOnFocus="false" />
		<Button text="Export" icon="sap-icon://download" press="onExportCSV"/>
	</Toolbar>
</core:FragmentDefinition>