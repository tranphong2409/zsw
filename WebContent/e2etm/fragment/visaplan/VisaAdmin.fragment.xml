<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:c="sap.ui.commons">

	<FlexBox class="dep_customer_flexbox">
		<FlexBox direction="Column">
			<FlexBox class="dep_customer_flexbox_select">
				<Label text="Visa No."></Label>
				<Input value="{ZZ_VISA_NO}" editable="{properties>/vaeditable}"></Input>
			</FlexBox>
			<FlexBox class="dep_customer_flexbox_select">
				<Label text="Visa Start Date" class="required"></Label>
				<DatePicker id="visaSDate" value="{path:'ZZ_VISA_SDATE'}"
					displayFormat="dd/MM/yyyy" placeholder="DD/MM/YYYY" valueFormat="yyyyMMdd"
					change="VisaDateChange" editable="{properties>/vaeditable}" />
			</FlexBox>

		</FlexBox>
		<FlexBox direction="Column">
			<FlexBox class="dep_customer_flexbox_select">

			</FlexBox>
			<FlexBox class="dep_customer_flexbox_select">
				<Label text="Visa End Date" class="required"></Label>
				<DatePicker id="visaEDate" value="{ZZ_VISA_EDATE}"
					displayFormat="dd/MM/yyyy" placeholder="DD/MM/YYYY" valueFormat="yyyyMMdd"
					change="VisaDateChange" editable="{properties>/vaeditable}" />
			</FlexBox>
		</FlexBox>
	</FlexBox>
	<FlexBox>
	</FlexBox>
	
	
</core:FragmentDefinition>